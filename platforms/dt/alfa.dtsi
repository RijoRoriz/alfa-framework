/include/ "system-conf.dtsi"
  / {
  reserved- memory {
  #address - cells = < 2 >;
  #size - cells = < 2 >;
  ranges;

  reserved_region_0: reserved_region_0 @40000000 {
    compatible = "shared-dma-pool";
    reg = < 0x0 0x40000000 0x0 0x200000 >; // 2MB region
    no - map;
  };

  reserved_region_1: reserved_region_1 @40200000 {
    compatible = "shared-dma-pool";
    reg = < 0x0 0x40200000 0x0 0x200000 >; // 2MB region
    no - map;
  };

  reserved_region_2: reserved_region_2 @40400000 {
    compatible = "shared-dma-pool";
    reg = < 0x0 0x40400000 0x0 0x200000 >; // 2MB region
    no - map;
  };

  reserved_region_3: reserved_region_3 @40600000 {
    compatible = "shared-dma-pool";
    reg = < 0x0 0x40600000 0x0 0x200000 >; // 2MB region
    no - map;
  };

  reserved_region_4: reserved_region_4 @40800000 {
    compatible = "shared-dma-pool";
    reg = < 0x0 0x40800000 0x0 0x200000 >; // 2MB region
    no - map;
  };

  reserved_region_5: reserved_region_5 @40A00000 {
    compatible = "shared-dma-pool";
    reg = < 0x0 0x40A00000 0x0 0x200000 >; // 2MB region
    no - map;
  };

  reserved_region_6: reserved_region_6 @40C00000 {
    compatible = "shared-dma-pool";
    reg = < 0x0 0x40C00000 0x0 0x200000 >; // 2MB region
    no - map;
  };

  reserved_region_7: reserved_region_7 @40E00000 {
    compatible = "shared-dma-pool";
    reg = < 0x0 0x40E00000 0x0 0x200000 >; // 2MB region
    no - map;
  };

  reserved_region_large: reserved_region_large @50000000 {
    compatible = "shared-dma-pool";
    reg = < 0x0 0x50000000 0x0 0xA00000 >; // 10MB region
    no - map;
  };
};

alfa_mem: alfa_mem {
  status = "okay";
  compatible = "alfa_mem";
  reg = < 0x0 0x40000000 0x0 0x200000 >,
              < 0x0 0x40200000 0x0 0x200000 >,
              < 0x0 0x40400000 0x0 0x200000 >,
              < 0x0 0x40600000 0x0 0x200000 >,
              < 0x0 0x40800000 0x0 0x200000 >,
              < 0x0 0x40A00000 0x0 0x200000 >,
              < 0x0 0x40C00000 0x0 0x200000 >,
              < 0x0 0x40E00000 0x0 0x200000 >;
};

alfa_ext_0: alfa_ext @80000000 {
  compatible = "alfa_ext";
  reg = < 0x0 0x80000000 0x0 0x1000 >; // 4KB region for FPGA device
};

alfa_ext_1: alfa_ext @90000000 {
  compatible = "alfa_ext";
  reg = < 0x0 0x90000000 0x0 0x1000 >; // 4KB region for FPGA device
};

alfa_ext_mem: alfa_ext_mem {
  status = "okay";
  compatible = "alfa_ext_mem";
  reg = < 0x0 0x50000000 0x0 0xA00000 >; // 10MB region
};
};
